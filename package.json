{
    "name": "@brewkit/components",
    "version": "2.3.0",
    "description": "Brewkit components",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/brewkit/components"
    },
    "author": "lawren",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/brewkit/components/issues"
    },
    "homepage": "https://brewkit.github.io",
    "sideEffects": false,
    "scripts": {
        "test:generate-output": "jest --watchAll --json --outputFile=.build/jest/test-results.json || true",
        "test": "jest --watchAll --json --outputFile=.build/jest/test-results.json",
        "sass": "./node_modules/.bin/dart-sass --style=compressed ./theme/cerveza/src/index.scss ./.build/storybook/assets/css/theme.css",
        "sass-watch": "npm run sass -- --watch",
        "sass-build": "./node_modules/.bin/dart-sass --style=compressed ./theme/cerveza/src/index.scss ./theme/cerveza/dist/theme.css",
        "commit": "npx git-cz",
        "start": "npm run sass && npm run storybook",
        "storybook": "start-storybook -p 9001 -c .build/storybook",
        "build": "ttsc --project ./.build/tsconfig.json && npm run sass-build",
        "build-storybook": "build-storybook -c .build/storybook -o .out",
        "deploy-storybook": "storybook-to-ghpages",
        "prepublishOnly": "jest && npm run build",
        "postpublish": "npm run deploy-storybook"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/lib/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "moduleNameMapper": {
            "^@components/(.+)$": "<rootDir>/src/components/$1",
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|md)$": "<rootDir>/.build/jest/mocks/fileMock.js",
            "^.+\\.(css|less|scss)$": "identity-obj-proxy"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/.build/jest/setupTests.js"
        ]
    },
    "devDependencies": {
        "@storybook/addon-actions": "^5.3.17",
        "@storybook/addon-backgrounds": "^5.3.17",
        "@storybook/addon-console": "^1.2.1",
        "@storybook/addon-docs": "^5.3.17",
        "@storybook/addon-jest": "^5.3.17",
        "@storybook/addon-knobs": "^5.3.17",
        "@storybook/addon-notes": "^5.3.17",
        "@storybook/addon-storyshots": "^5.3.17",
        "@storybook/addon-viewport": "^5.3.17",
        "@storybook/addons": "^5.3.17",
        "@storybook/preset-typescript": "^2.1.0",
        "@storybook/react": "^5.3.17",
        "@storybook/storybook-deployer": "^2.8.3",
        "@storybook/theming": "^5.3.17",
        "@types/enzyme": "^3.10.5",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/jest": "^25.1.4",
        "@types/node": "^13.9.3",
        "@types/react": "^16.9.25",
        "@types/react-dom": "^16.9.5",
        "@types/react-router-dom": "^5.1.3",
        "@types/react-test-renderer": "^16.9.2",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "@zerollup/ts-transform-paths": "^1.7.12",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.1.0",
        "cache-loader": "^4.1.0",
        "cz-conventional-changelog": "^3.1.0",
        "dart-sass": "^1.25.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.15.1",
        "eslint": "^6.7.2",
        "eslint-plugin-react": "^7.19.0",
        "fork-ts-checker-webpack-plugin": "^4.1.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^25.1.0",
        "react": "^16.13.1",
        "react-docgen-typescript-loader": "^3.7.1",
        "react-dom": "^16.13.1",
        "react-hook-form": "^5.1.3",
        "react-hot-loader": "^4.12.20",
        "react-router-dom": "^5.1.2",
        "react-test-renderer": "^16.13.1",
        "sass-loader": "^8.0.2",
        "ts-jest": "^25.2.1",
        "ts-loader": "^6.2.2",
        "ttypescript": "^1.5.10",
        "typescript": "^3.8.3"
    },
    "peerDependencies": {
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-router-dom": "^5.1.2"
    },
    "dependencies": {
        "@material-ui/core": "^4.9.7",
        "@material-ui/icons": "^4.9.1",
        "@popperjs/core": "^2.1.1",
        "clsx": "^1.1.0",
        "lodash": "^4.17.15"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "branches": [
            "master",
            "next"
        ]
    }
}

{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@brewkit/components": ["src"],
            "@brewkit/components/*": ["src/*"],
            "docs/*": ["docs/src/*"]
        },
        "outDir": "./dist",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react",
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "types": ["jest", "@testing-library/jest-dom", "vite"],
        "noEmit": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": ["src/**/*", "docs/**/*"],
    "exclude": ["node_modules", "build", "scripts"]
}

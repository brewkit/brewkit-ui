{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@brewkit/components": ["packages/components/src"],
            "@brewkit/components/*": ["packages/components/src/*"],
            "@brewkit/themes": ["packages/themes/src"],
            "@brewkit/themes/*": ["packages/themes/src/*"],
            "@docs/components": ["docs/src/components"],
            "@docs/components/*": ["docs/src/components/*"],
            "@docs/style": ["docs/src/style/index.ts"],
            "@docs/style/*": ["docs/src/style/*"]
        },
        "outDir": "./dist",
        "module": "ES2015",
        "moduleResolution": "node",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react",
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "types": ["jest", "@testing-library/jest-dom"],
        "noEmit": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": ["packages/*", "docs/*"],
    "exclude": ["node_modules", "build", "scripts"]
}

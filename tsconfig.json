{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@utilities/*": ["utilities/*"]
        },
        "outDir": "./dist",
        "module": "ES2015",
        "moduleResolution": "node",
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "declaration": true,
        "esModuleInterop": true,
        "allowJs": true,
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ],
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": ["src/index.ts"],
    "exclude": [
        "node_modules",
        "build",
        "scripts"
    ]
}
